#include<bits/stdc++.h>
using namespace std;

void pattern(int n){
  for (int i = 0; i < n; i++)
  {
   for (int j = n; j > i; j--)
   {
   cout << n - j + 1 << " ";
   }
   cout << endl;
  }
}

int main(){
  int num;
  cout << "Enter the number : ";
  cin >> num;
  pattern(num);
  return 0;
}

Output //
1 2 3 4 5
1 2 3 4
1 2 3
1 2
1
